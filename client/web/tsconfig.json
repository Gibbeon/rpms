{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./src/**/*.test.tsx",
    "./src/public/"
  ]
}